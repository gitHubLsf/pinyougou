<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lsf.pinyougou.dao.TbTypeTemplateDao">

    <resultMap type="com.lsf.pinyougou.pojo.TbTypeTemplate" id="TbTypeTemplateMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="specIds" column="spec_ids" jdbcType="VARCHAR"/>
        <result property="brandIds" column="brand_ids" jdbcType="VARCHAR"/>
        <result property="customAttributeItems" column="custom_attribute_items" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbTypeTemplateMap">
        select
          id, name, spec_ids, brand_ids, custom_attribute_items
        from pinyougoudb.tb_type_template
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbTypeTemplateMap">
        select
          id, name, spec_ids, brand_ids, custom_attribute_items
        from pinyougoudb.tb_type_template
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TbTypeTemplateMap">
        select
          id, name, spec_ids, brand_ids, custom_attribute_items
        from pinyougoudb.tb_type_template
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="specIds != null and specIds != ''">
                and spec_ids = #{specIds}
            </if>
            <if test="brandIds != null and brandIds != ''">
                and brand_ids = #{brandIds}
            </if>
            <if test="customAttributeItems != null and customAttributeItems != ''">
                and custom_attribute_items = #{customAttributeItems}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into pinyougoudb.tb_type_template(name, spec_ids, brand_ids, custom_attribute_items)
        values (#{name}, #{specIds}, #{brandIds}, #{customAttributeItems})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update pinyougoudb.tb_type_template
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="specIds != null and specIds != ''">
                spec_ids = #{specIds},
            </if>
            <if test="brandIds != null and brandIds != ''">
                brand_ids = #{brandIds},
            </if>
            <if test="customAttributeItems != null and customAttributeItems != ''">
                custom_attribute_items = #{customAttributeItems},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from pinyougoudb.tb_type_template where id = #{id}
    </delete>

</mapper>